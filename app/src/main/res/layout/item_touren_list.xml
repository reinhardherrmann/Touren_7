<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tViewModel"
            type="de.orome.touren7.viewmodel.TourenViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_layout">

        <TextView
            android:id="@+id/tv_item_tour_tour_nummer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="1234567890"
            android:textSize="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_tour_tour_datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="09.09.2022"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_item_tour_tour_nummer"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lbl_tourStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status:"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintStart_toStartOf="@+id/tv_item_tour_tour_nummer"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_tour_tour_nummer" />

        <TextView
            android:id="@+id/tv_item_tour_tour_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="in Bearbeitung"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintStart_toEndOf="@+id/lbl_tourStatus"
            app:layout_constraintTop_toTopOf="@+id/lbl_tourStatus" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_4sdp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_tour_tour_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>